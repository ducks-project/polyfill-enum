root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{php,html,twig,hac3,inc}]
indent_style = space
indent_size = 4

[*.{json,lock}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[*.{xml,xsd}]
max_line_length = off
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0
